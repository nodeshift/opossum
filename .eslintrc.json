{
  "extends": "semistandard",
  "rules": {
    "standard/no-callback-literal": "off",
    "arrow-spacing": "error",
    "arrow-parens": ["error", "as-needed"],
    "arrow-body-style": ["error", "as-needed"],
    "prefer-template": "error",
    "max-len": ["warn", { "code": 80 }],
    "valid-jsdoc": "error"
  }

}